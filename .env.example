# ===================================================================
# ZK Private Lending - Environment Variables
# ===================================================================
#
# Copy this file to .env and fill in the values
# NEVER commit .env to git!
#
# ===================================================================

# ============ Database ============
DATABASE_URL=postgres://zklending:your_password@localhost:5432/zk_lending
POSTGRES_PASSWORD=your_secure_password

# ============ API Server ============
HOST=0.0.0.0
PORT=3000
RUST_LOG=info,zk_lending_api=debug

# ============ ZK Prover ============
# Circuit size parameter (2^k rows)
# Higher = larger circuits supported, but more memory
ZK_PROVER_K=17

# ============ Ethereum (Sepolia Testnet) ============
# Public RPC - 가입 필요 없음! (https://chainlist.org/chain/11155111)
ETH_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com
CHAIN_ID=11155111

# 대안 RPC (위가 느리면 이거 사용):
# ETH_RPC_URL=https://rpc.sepolia.org
# ETH_RPC_URL=https://1rpc.io/sepolia

# 테스트 ETH Faucet (무료):
# - https://sepoliafaucet.com
# - https://www.alchemy.com/faucets/ethereum-sepolia
# - https://faucet.quicknode.com/ethereum/sepolia

# Private key (MetaMask → 계정 → 계정 세부정보 → 비공개 키 내보내기)
# ⚠️ 테스트용 지갑만 사용! 실제 자금 있는 지갑 절대 금지!
DEPLOYER_PRIVATE_KEY=your_private_key_here

# ============ Price Oracle ============
# CoinGecko API (free tier)
COINGECKO_API_URL=https://api.coingecko.com/api/v3

# Chainlink (production)
# CHAINLINK_ETH_USD=0x5f4eC3Df9cbd43714FE2740f5E3616155c5b8419

# ============ Contract Addresses (after deployment) ============
USDC_ADDRESS=
ZK_VERIFIER_ADDRESS=
COMMITMENT_REGISTRY_ADDRESS=
ZK_LENDING_POOL_ADDRESS=
